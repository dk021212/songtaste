<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:stone="http://schemas.android.com/apk/res/com.stone.songtaste"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.stone.black.slider.view.SlidingMenu
        android:id="@+id/id_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        stone:blackRightPadding="80dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/black_frame_background"
            android:orientation="horizontal" >

            <include layout="@layout/black_left_menu">
            </include>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/black_qq" >

                <Button
                    android:id="@+id/btnPositive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Positive Num" >
                </Button>

                <Button
                    android:id="@+id/btnNegative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Negative Num" >
                </Button>
            </LinearLayout>
        </LinearLayout>
    </com.stone.black.slider.view.SlidingMenu>

</RelativeLayout>